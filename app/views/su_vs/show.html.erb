<div class="container">
  <div class="big-shop">
    <h1><%= @suv.shop_num %></h1>
  </div>
  <div class="img-wrap">
    <div class="show-img">
      <%= suv_picture %>
    </div>
    <p>&copy;<%= @suv.show_img_cap %></p>
  </div>
  <div class="make-model">
    <p><%= @suv.year %> <%= @suv.make_model %></p>
  </div>
  <hr>
  <div class="assignments">
    <h3>Assignments</h3>
    <div class="col-md-6 left-info">
      <p><%= @suv.original_assign %></p>
      <p><%= @suv.second_assign %></p>
      <p><%= @suv.third_assign %></p>
      <p><%= @suv.fourth_assign %></p>
      <p><%= @suv.fifth_assign %></p>
      <p><%= @suv.sixth_assign %></p>
      <p><%= @suv.seventh_assign %></p>
    </div>
    <div class="col-md-6 right-info">
      <p><%= @suv.eighth_assign %></p>
      <p><%= @suv.ninth_assign %></p>
      <p><%= @suv.tenth_assign %></p>
      <p><%= @suv.eleventh_assign %></p>
      <p><%= @suv.twelfth_assign %></p>
      <p><%= @suv.thirteenth_assign %></p>
      <p><%= @suv.fourteenth_assign %></p>
    </div>
    <div class="col-md-12">
      <p><%= @suv.seventh_assign %></p>
    </div>
  </div>
  <div class="col-md-12 notes">
    <h3>Vehicle Notes</h3>
    <p><%= @suv.notes %></p>
  </div>
  <div class="col-md-12 img-links">
    <h3 class="addl-img">Additional Images</h3>
    <p><a href=<%= @suv.img_link %> target="_blank"><%= @suv.caption %></a>
      <a href=<%= @suv.img_link_two %> target="_blank"><%= @suv.caption_two %></a>
      <a href=<%= @suv.img_link_three %> target="_blank"><%= @suv.caption_three %></a>
      <a href=<%= @suv.img_link_four %> target="_blank"><%= @suv.caption_four %></a>
      <a href=<%= @suv.img_link_five %> target="_blank"><%= @suv.caption_five %></a>
      <a href=<%= @suv.img_link_six %> target="_blank"><%= @suv.caption_six %></a>
      <a href=<%= @suv.img_link_seven %> target="_blank"><%= @suv.caption_seven %></a>
      <a href=<%= @suv.img_link_eight %> target="_blank"><%= @suv.caption_eight %></a>
    </p>
  </div>
  <hr>
</div>