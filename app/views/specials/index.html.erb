            <td><%= special.make_model %></td>
            <td><%= special.original_assign %></td>
            <td><%= special.second_assign %></td>
            <td><%= special.third_assign %></td>
            <td><%= special.fourth_assign %></td>
            <td><%= special.fifth_assign %></td>
            <td><%= special.sixth_assign %></td>
            <td><%= special.seventh_assign %></td>
            <td><%= special.eighth_assign %></td>
            <td><%= special.notes %></td>
            <td><a href=<%= special.img_link %> target="_blank"><%= special.caption %></a>
              <a href=<%= special.img_link_two %> target="_blank"><%= special.caption_two %></a>
              <a href=<%= special.img_link_three %> target="_blank"><%= special.caption_three %></a>
              <a href=<%= special.img_link_four %> target="_blank"><%= special.caption_four %></a>
              <a href=<%= special.img_link_five %> target="_blank"><%= special.caption_five %></a>
              <a href=<%= special.img_link_six %> target="_blank"><%= special.caption_six %></a>
              <a href=<%= special.img_link_seven %> target="_blank"><%= special.caption_seven %></a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>